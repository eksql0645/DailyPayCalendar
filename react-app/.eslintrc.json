{
	"plugins": ["prettier"],
	"extends": ["react-app", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": false,
		"node": true
	},
	"ignorePatterns": ["node_modules/"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		]
	}
}
